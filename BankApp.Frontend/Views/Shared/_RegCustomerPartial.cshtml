@model CustomerDTO
<div class="contianer">

    <form asp-action="RegisterCustomer" asp-controller="Admin">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div id="custoemr-credentials">
            <label asp-for="Givenname"></label>
            <input type="text" asp-for="Givenname" class="form-control mb-2" />
            <label asp-for="Surname"></label>
            <input type="text" asp-for="Surname" class="form-control mb-2" />
            <div class="mb-2">
                <div class="form-check form-check-inline md-2">
                    <input type="radio" id="female" asp-for="Gender" class="form-check-input" value="Female" />
                    <label class="form-check-label" for="female">Kvinna</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" id="male" asp-for="Gender" class="form-check-input" value="Male" />
                    <label class="form-check-label" for="male">Man</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" id="other" asp-for="Gender" class="form-check-input" value="Other" />
                    <label class="form-check-label" for="other">Annat</label>
                </div>
            </div>
            <label asp-for="Streetaddress"></label>
            <input type="text" asp-for="Streetaddress" class="form-control mb-2" />
            <label asp-for="City"></label>
            <input type="text" asp-for="City" class="form-control mb-2" />
            <label asp-for="Zipcode"></label>
            <input type="text" asp-for="Zipcode" class="form-control mb-2" />
            <label asp-for="Country"></label>
            <input type="text" asp-for="Country" class="form-control mb-2" />
            <label asp-for="CountryCode"></label>
            <input type="text" asp-for="CountryCode" class="form-control mb-2" />
            <label asp-for="Birthday"></label>
            <input type="date" asp-for="Birthday" max="@DateTime.Now.AddYears(-16)" class="form-control mb-2" />
            <label asp-for="Telephonenumber"></label>
            <input type="tel" asp-for="Telephonenumber" class="form-control mb-2" />
            <label asp-for="Telephonecountrycode"></label>
            <input type="text" asp-for="Telephonecountrycode" class="form-control mb-2" />
            <label asp-for="Emailaddress"></label>
            <input type="email" asp-for="Emailaddress" class="form-control mb-2" />
        </div>
    </form>
</div>
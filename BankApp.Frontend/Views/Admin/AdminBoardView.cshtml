@page
@model List<BankApp.Enteties.DataTransferObjects.CustomerDTO>
<div class="container-fluid">
    <div class="row">
        
        <div class="col border-right">
            @*Customer list*@
            <ul class="list-group list-group-flush">
                @foreach (var c in @Model)
                {
                    <li class="list-group-item">
                        <div class="card">
                            <div class="card-header">
                                <div class="d-inline-flex">
                                    <p>@c.CustomerId</p>
                                    <p>@c.Surname @c.Givenname</p>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">
                                                <p>@c.Streetaddress</p>
                                            </li>
                                            <li class="list-group-item">
                                                <p>@c.City</p>
                                            </li>
                                            <li class="list-group-item">
                                                <p>@c.Zipcode</p>
                                            </li>
                                            <li class="list-group-item">
                                                <p>@c.Country</p>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">
                                                <p>@c.Gender</p>
                                            </li>
                                            <li class="list-group-item">
                                                <p>@c.Birthday</p>
                                            </li>
                                            <li class="list-group-item">
                                                <p>@c.Telephonenumber</p>
                                            </li>
                                            <li class="list-group-item">
                                                <p>@c.Emailaddress</p>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>2
                        </div>
                    </li>
                }
            </ul>
        </div>
        <div class="col border-right">
            @*New Customer Acc*@
            @(await Component.InvokeAsync("RegisterCustomer"))
        </div>
        <div class="col border-right">
            @*Customer login*@
            @(await Component.InvokeAsync("AddCustomerLogin"))
        </div>
        <div class="col border-right">
            @*New accounttype*@
            @(await Component.InvokeAsync("NewAccountType"))
        </div>
    </div>

</div>